<!--The current page will be displayed in an opaque manner,
    while the others will be shown more colorful-->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var currentPath = window.location.pathname.replace(/^\/|\/$/g, ''); // Remove '/'
        var navLinks = document.querySelectorAll(".nav-link");

        navLinks.forEach(function (link) {
            var linkPath = link.getAttribute("href").replace(/^\/|\/$/g, ''); // Remove '/'
            if (currentPath === linkPath) {
                link.classList.remove("active");
            }
        });
    });
</script>

